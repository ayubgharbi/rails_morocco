<p id="notice"><%= notice %></p>

<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.description %></td>
        <td><%= event.date %></td>
        <td><%= event.address %></td>
        <td><%= link_to 'Show', event %></td>
        <td>
          <%= link_to 'Edit', edit_event_path(event) if policy(event).update? %>
        </td>
        <td>
          <%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } if policy(event).destroy? %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_event_path if current_user&.admin? %>
